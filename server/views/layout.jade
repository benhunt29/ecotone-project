doctype html
html(lang="en" app="ecotoneApp")
  head
    title= title

    link(rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.css")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic")
    link(rel="stylesheet" href="/stylesheets/style.css")

    script(src="./scripts/angular/angular.min.js")
    script(src="./scripts/angular-route.min.js")
    script(src="./scripts/angular/angular-material.min.js")
    script(src="./scripts/angular/angular-animate.min.js")
    script(src="./scripts/angular/angular-aria.min.js")
    script(src="./scripts/angular-messages.min.js")
    script(src="./scripts/app.js")

    meta(name="viewport" content="initial-scale=1")
    base(href='/')

  body
    header(layout="column" ng-controller="navCtrl" layout-fill)
      md-toolbar
        div(class="md-primary md-toolbar-tools")
          span
            img(src="/images/ECOTONE_logo.gif" alt="ECOTONE")
            h1 Upcycle Calculator
          span(flex)
          p Hello, {{user}}!
          md-button BUTTON
          md-button(href="/calculator") Calculator
          md-button(href="/dashboard") My Dashboard
          md-button(href="/login" class="md-icon-button") Login
          md-button(href="/calculator" ng-click="logOut()" class="md-icon-button") Logout

    block content

    footer
      md-toolbar
        div(class="md-toolbar-tools")
          span
            p(id="copyright") &copy; 2015 Ecotone-Partners
          span(flex)
          md-button(href="/about") About
          md-button(href="/contact") Contact
          md-button(href="/privacy") Privacy